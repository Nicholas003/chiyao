
@import '../../common/colorui/main.wxss';

@import '../../common/colorui/icon.wxss';

.mask{
	width: 100vw;
	height: 100vh;
	opacity: 0;
	background-color: rgba(0,0,0,0.5);
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	pointer-events: none;
	z-index: 100;
	display: flex;
	justify-content: center;
	align-items: center;
	transition: all .3s;
}

.mask.show{
	opacity: 1;
	pointer-events:auto;
	transition: all .3s;
}

.mask.show > .window{
	transform: scale(1);
	transition: all .3s;
}

.window{
	width: 70vw;
	height: 55vw;
	background: #FFFFFF;
	border-radius: 20rpx;
	display: flex;
	align-items: center;
	flex-direction: column;
	transform: scale(0.5);
	transition: all .3s;
}
.pople{
	width: 120rpx;
	height: 120rpx;
	background: #e6e6e6;
	border: solid 5rpx #fff;
	border-radius: 50%;
	margin-top: -60rpx;
	color: #fff;
	font-size: 120rpx;
	overflow: hidden;
	display: flex;
	justify-content: center;
	align-items: center;
}
.title{
